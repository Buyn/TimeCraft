                     </children>
                  </AnchorPane>
                  <ProgressBar fx:id="alrmProgressBar" prefHeight="18.0" prefWidth="400.0" progress="0.0" />
                  <Label fx:id="alarmLabel" prefHeight="17.0" prefWidth="185.0" styleClass="background" text="Alarm: 00:00:00 (0)" />
               </children>
            </VBox>
         </center>
      </BorderPane>
   </children>
